# turn display off and lock the screen
bindsym $win+F2 exec --no-startup-id xset dpms force off && i3lock -d -c 000000
# F@ is XF86AudioLowerVolume when FnLock is on
bindsym $win+XF86AudioLowerVolume exec --no-startup-id xset dpms force off && i3lock -d -c 000000

# F11 is XF86LaunchA when FnLock is on
bindsym XF86LaunchA exec --no-startup-id xdotool key F11

# Fn + F7 on a T460s
