bindsym Ctrl+Shift+Up exec playerctl play
bindsym Ctrl+Shift+Right exec playerctl next
bindsym Ctrl+Shift+Prior exec sh -c 'pactl set-sink-volume @DEFAULT_SINK@ +5%'
bindsym Ctrl+Shift+Next exec sh -c 'pactl set-sink-volume @DEFAULT_SINK@ -5%'

bindsym XF86AudioRaiseVolume exec sh -c 'pactl set-sink-volume @DEFAULT_SINK@ +5%'
bindsym XF86AudioLowerVolume exec sh -c 'pactl set-sink-volume @DEFAULT_SINK@ -5%'
bindsym XF86AudioMute exec sh -c 'playerctl pause && pactl set-sink-mute @DEFAULT_SINK@ toggle'
bindsym XF86AudioMicMute exec sh -c 'pactl set-source-mute @DEFAULT_SOURCE@ toggle'

